<!-- res/values/themes.xml -->
<resources>
    <style name="Theme.FlexFit" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">#FFFF3B30</item>
        <item name="colorOnPrimary">#FFFFFF</item>
        <item name="android:colorBackground">#FFF8F9FA</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="Theme.FlexFit.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.FlexFit.Splash" parent="Theme.FlexFit.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
    </style>
</resources>